@{
}

<form method="post" asp-action="Create">
    <div class="mb-3">
        <label asp-for="Login">Login</label>
        <input asp-for="Login" class="form-control" placeholder="Login">
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Roles">Roles</label>
        <select asp-for="Roles" asp-items="@Html.GetEnumSelectList<RolesEnum>()" multiple>
            <option selected="selected" disabled value="">--Select--</option>
        </select>
        <span asp-validation-for="Roles" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
