@model IEnumerable<UserModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    int numberCar = 1;
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Login</th>
                        <th scope="col">Role</th>
                        <th scope="col"><a asp-controller="Users" asp-action="Create" type="button" class="btn btn-primary"><i class="bi bi-plus-square"></i></a></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <th scope="row">@(numberCar++)</th>
                            <td>@user.Login</td>
                            <td>@user.Role</td>
                            <td>
                                <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" type="button" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                                <a asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" type="button" class="btn btn-danger"><i class="bi bi-trash3"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
