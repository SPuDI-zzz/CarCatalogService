@model IEnumerable<CarModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    int numberCar = 1;
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Mark</th>
                        <th scope="col">Model</th>
                        <th scope="col">Color</th>
                        @if (User.IsInRole(AppRoles.Manager) || User.IsInRole(AppRoles.Admin))
                        {
                            <th scope="col">
                                <a asp-controller="Cars" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i></a>
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var car in Model)
                    {        
                        <tr>
                            <th scope="row">@(numberCar++)</th>
                            <td>@car.Mark</td>
                            <td>@car.Model</td>
                            <td>@car.Color</td>
                            @if (User.IsInRole(AppRoles.Manager) || User.IsInRole(AppRoles.Admin))
                            {
                                <td>
                                    <a asp-controller="Cars" asp-action="Edit" asp-route-id="@car.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                                    <a asp-controller="Cars" asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger"><i class="bi bi-trash3"></i></a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
