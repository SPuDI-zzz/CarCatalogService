@{
}
@if (TempData["Error"] != null)
{
    <div class="col-md-12 alert alert-danger">
        <span><b>Sorry!</b> - @TempData["Error"] </span>
    </div>
}
<form method="post" asp-action="Create">
    <div class="mb-3">
        <label asp-for="Mark">Mark</label>
        <input asp-for="Mark" class="form-control" placeholder="Mark">
        <span asp-validation-for="Mark" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Model">Model</label>
        <input asp-for="Model" class="form-control" placeholder="Model">
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Color">Color</label>
        <input asp-for="Color" class="form-control" placeholder="Color">
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
